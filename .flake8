[flake8]
max-line-length = 100
extend-ignore = E203, W503
exclude =
    .git,
    __pycache__,
    .venv,
    .env,
    venv,
    migrations,
    alembic,
    node_modules,
    .mypy_cache,
    .pytest_cache,
    dist,
    build,
    .vscode
    .mypy

show-source = true

ignore = E203, E266, E501, W503, F403, F401
